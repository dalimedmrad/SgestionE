{% extends 'base.html.twig' %}

{% block title %}Employes{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="text-center">Employé N°{{employe.id}}</h1><br>
    <div class="col-md-10">
        <table class="table table-striped table-hover custab" border="0">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ employe.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ employe.prenom }}</td>
                </tr>
                <tr>
                    <th>Addresse</th>
                    <td>{{ employe.addresse }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ employe.email }}</td>
                </tr>
                <tr>
                    <th>N°téléphone</th>
                    <td>{{ employe.numtlf }}</td>
                </tr>
                <tr>
                    <th>Salaire</th>
                    <td>{{ employe.salaire }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('employes_index') }}" class="btn btn-secondary">Retourner</a>
    </div>
</div>
    
{% endblock %}
