{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}

     <div class="row">
        <div class="col-12">
        <div class="card">
            <div class="card-header text-center">
              <h3 class="card-title ">Nos Produits</h3>
            </div>
        <div class="card-body">
            <a href="{{ path('produits_new') }}" class="btn btn-success pull-right">Ajouter</a>
            <br>
            <table class="table table-striped table-hover custab">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Prix(DT)</th>
                        <th class="text-center">Quantité en Stock</th>
                        <th class="text-center">Catégorie</th>
                        <th class="text-center">Modifier</th>
                        <th class="text-center">Supprimer</th>
                        <th class="text-center">Afficher</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                            <tr>
                                <td>{{ produit.id }}</td>
                                <td>{{ produit.nom }}</td>
                                <td>{{ produit.prixUnit }}</td>
                                <td>{{ produit.quantiteStock }}</td>
                                <td>{{ produit.categorie}}</td>
                                <td class="text-center"><a class="btn" href="{{ path('produits_edit', {'id': produit.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg></a>
                                </td>
                                <td class="text-center">{{ include('produits/_delete_form.html.twig') }}</td>
                                <td class="text-center"><a  class='btn' href="{{ path('produits_show', {'id': produit.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                    </svg></a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6">Aucun produit trouvé</td>
                            </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                     <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Prix(DT)</th>
                        <th class="text-center">Quantité en Stock</th>
                        <th class="text-center">Catégorie</th>
                        <th class="text-center">Modifier</th>
                        <th class="text-center">Supprimer</th>
                        <th class="text-center">Afficher</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
