{% extends 'base.html.twig' %}

{% block title %} Nos Categories {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12">
        <div class="card">
            <div class="card-header">
              <h3 class="card-title">Nos Categories</h3>
            </div>
        <div class="card-body">
            <a href="{{ path('categories_new') }}" class="btn btn-success  pull-right">Ajouter</a>
            <br>
            <table class="table table-striped table-hover custab">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Caracteristiques</th>
                        <th class="text-center">Modifier</th>
                        <th class="text-center">Supprimer</th>
                        <th class="text-center">Afficher</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.nom }}</td>
                                <td>{{ category.caracteristiques }}</td>
                                <td class="text-center"><a title="Modifier" class='btn' href="{{ path('categories_edit', {'id': category.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg></a></td>
                                <td class="text-center"> {{ include('categories/_delete_form.html.twig') }}</td>
                                <td class="text-center"><a  class='btn' href="{{ path('categories_show', {'id': category.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                    </svg></a></td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4">Aucune catégorie trouvé</td>
                            </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
